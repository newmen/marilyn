<div class="oauth-sign-links">
  <% if devise_mapping.omniauthable? %>
      <h3><%= t('sign_trough_oauth') %></h3>
      <% resource_class.omniauth_providers.each do |provider| %>
          <% img = image_tag("#{provider}.png", :alt => t('sign_in_with', :provider => provider.to_s.titleize)) %>
          <%= link_to img, omniauth_authorize_path(resource_name, provider) %>
      <% end %>
  <% end %>
</div>

<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to t('forgot_password'), new_password_path(resource_name) %><br />
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('didnt_receive_confirmation'), new_confirmation_path(resource_name) %><br />
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('didnt_receive_unlock'), new_unlock_path(resource_name) %><br />
<% end %>