<html>
<head>
  <title><%= yield(:title).blank? ? '' : "#{yield(:title)} :: " %><%= t('site_name') %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <%= yield(:head) %>
</head>
<body>

<%= hidden_div_if(alert, :id => 'alert') { alert } %>
